<%# Shows listings %>

<div class="show-div">
  <div class="div1">
     <p>
    <strong>Name:</strong>
    <%= @listing.name %>
  </p>
    <p>
      <% if @listing.image.attached?%>
      <%= image_tag @listing.image, width: 120 %>
      <%end%>
    </p>
    <p>
  </div>

    <div class ="div2">
    <p>
      <strong>Category:</strong>
      <%= @listing.category %>
    </p>
      <strong>Description:</strong>
      <%= @listing.description %>
    </p>

    <p>
      <strong>Price:</strong>
      <%= @listing.price %>
    </p>
    <p>
    <strong><%= link_to "Buy now", new_order_path(listing_id: @listing.id) %></strong>
    </p>
      <%# if user is signed in, edit and delete links will show %>
      <strong>
      <% if current_user == @listing.user %>
      <%= link_to 'Edit', edit_listing_path(@listing) %> |
      <%end%>
      <%= link_to 'Back', listings_path %>
      </strong>
    </div>
  </div>